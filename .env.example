# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings (https://app.supabase.com)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# CLOUDFLARE R2 CONFIGURATION
# =============================================================================
# Get these from your CloudFlare R2 dashboard
CLOUDFLARE_R2_ACCOUNT_ID=your-account-id
CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-access-key
CLOUDFLARE_R2_BUCKET_NAME=privacy-social-uploads
CLOUDFLARE_R2_PUBLIC_URL=https://your-bucket.r2.dev

# =============================================================================
# EXPO CONFIGURATION
# =============================================================================
EXPO_PUBLIC_API_URL=http://localhost:3000/api
EXPO_PUBLIC_ENV=development

# =============================================================================
# FIREBASE CONFIGURATION (for push notifications)
# =============================================================================
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# iOS specific
FIREBASE_IOS_CLIENT_ID=your-ios-client-id
FIREBASE_IOS_BUNDLE_ID=com.privacysocial.app

# Android specific
FIREBASE_ANDROID_CLIENT_ID=your-android-client-id
FIREBASE_ANDROID_PACKAGE_NAME=com.privacysocial.app

# =============================================================================
# REDIS CONFIGURATION (for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# SENTRY CONFIGURATION (for error tracking)
# =============================================================================
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-org
SENTRY_PROJECT=privacy-social-app

# =============================================================================
# APP CONFIGURATION
# =============================================================================
APP_NAME=Privacy Social
APP_VERSION=0.1.0
NODE_ENV=development

# Feature flags
FEATURE_FLAG_AUTO_PUBLISH=true
FEATURE_FLAG_VIDEO_SUPPORT=false
FEATURE_FLAG_WEB_DASHBOARD=true

# =============================================================================
# SECURITY
# =============================================================================
# Generate a secure random string for JWT signing
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# =============================================================================
# ANALYTICS (Privacy-safe analytics)
# =============================================================================
# Optional: Only if using privacy-preserving analytics
ANALYTICS_ENABLED=false
ANALYTICS_API_KEY=

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
DEBUG=true
LOG_LEVEL=debug
REACT_NATIVE_PACKAGER_HOSTNAME=localhost
